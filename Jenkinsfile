properties([
    parameters([
        string(name: 'TARGET_BRANCH', defaultValue: 'main', description: 'Which branch to build/deploy')
    ])
])

pipeline {
    agent {
        kubernetes {
            label 'dind-agent'
            defaultContainer 'docker'
            yamlFile 'jenkins/worker-template.yaml'
        }
    }
    environment {
        KUBECONFIG_CONTENT = credentials('jenkins-kubeconfig-base64')
        GIT_USER = 'mesutdmrz'
        GIT_EMAIL = 'mesutdmrz@gmail.com'
    }
    stages {
        stage('Deploy with Makefile') {
            steps {
                container('docker') {
                    script {
                        sh '''
                        mkdir -p /tmp/kube
                        echo "$KUBECONFIG_CONTENT" | base64 -d > /tmp/kube/config
                        export KUBECONFIG=/tmp/kube/config
                        '''
                        
                        // Parametreye göre ENV seçimi
                        def envValue = params.TARGET_BRANCH == 'main' ? 'prod' : 'test'
                        echo "Selected ENV: ${envValue}"
                        sh "kubectl get pods"
                        sh "pwd"
                        sh 'git config --global --add safe.directory $WORKSPACE'
                        sh 'cd /app'
                        sh "make deploy ENV=${envValue}"
                        
                        withCredentials([string(credentialsId: 'git-token', variable: 'GIT_TOKEN')]) {
                            sh """
                            git config user.name "${GIT_USER}"
                            git config user.email "${GIT_EMAIL}"
                            git add k8s/overlays/${envValue}/kustomization.yaml
                            git commit -m "Update kustomize generated by Jenkins" || true
                            git remote set-url origin https://mesutdmrz:${GIT_TOKEN}@github.com/mesutdmrz/jenkins-test.git
                            git push origin ${params.TARGET_BRANCH}
                            """
                        }
                    }
                }
            }
        }
    }
}
